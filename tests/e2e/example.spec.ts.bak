import { test, expect } from "@playwright/test";

test.describe("AI Travel Planner E2E Tests", () => {
  test("should load the home page", async ({ page }) => {
    await page.goto("/");

    // Check if the page loads successfully
    await expect(page).toHaveTitle(/AI Travel Planner/);

    // Check for main navigation elements
    await expect(page.locator("nav")).toBeVisible();
  });

  test("should navigate to plan generation page", async ({ page }) => {
    await page.goto("/");

    // Navigate to generate page
    await page.click("text=Generate Plan");

    // Verify we're on the generate page
    await expect(page).toHaveURL(/.*generate/);
    await expect(page.locator("h1")).toContainText("Generate Travel Plan");
  });

  test("should show login form when accessing protected routes", async ({ page }) => {
    await page.goto("/plans");

    // Should redirect to login or show login form
    await expect(page).toHaveURL(/.*auth/);
  });
});
